#!/bin/bash

CKAN_INSTALL_DIR="$(dirname "$(dirname "$(readlink -fm "$0")")")"

LESSC=/usr/local/bin/lessc

if [ ! -f $LESSC ]; then
  echo -e "\nERROR: lessc not installed, exec sudo npm install -g less\n" 1>&2
  exit 1
fi

$LESSC $CKAN_INSTALL_DIR/ckan/public/base/less/main.less > $CKAN_INSTALL_DIR/ckan/public/base/css/main.css

echo "Success css file generated\n" 1>&2
